generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre   String
  correo   String   @unique
  rol      String // comprador | vendedor | admin
  creadoEn DateTime @default(now())
}
